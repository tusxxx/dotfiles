#!/usr/bin/env sh

# ========================================
# Yabai Configuration
# Tiling Window Manager for macOS
# ========================================

# Load scripting addition (required for some features)
# See: https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# ====== Global Settings ======

# Layout mode (bsp = binary space partitioning, float = floating windows)
yabai -m config layout bsp

# Window splitting ratio
yabai -m config split_ratio 0.50

# Window placement (first_child = left/top, second_child = right/bottom)
yabai -m config window_placement second_child

# ====== Padding and Gaps ======

# Global space padding (top bottom left right)
yabai -m config top_padding    12
yabai -m config bottom_padding 12
yabai -m config left_padding   12
yabai -m config right_padding  12

# Space gap between windows
yabai -m config window_gap 12

# ====== Mouse Settings ======

# Center mouse on window with focus
yabai -m config mouse_follows_focus off

# Focus window under mouse
yabai -m config focus_follows_mouse off

# Modifier key for moving/resizing windows (cmd, alt, shift, ctrl)
yabai -m config mouse_modifier alt

# Left click + modifier to move window
yabai -m config mouse_action1 move

# Right click + modifier to resize window
yabai -m config mouse_action2 resize

# When window is dropped in center, swap with target
yabai -m config mouse_drop_action swap

# ====== Window Settings ======

# Window opacity
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.95

# Window border (requires disabling SIP)
yabai -m config window_border off
yabai -m config window_border_width 4
yabai -m config active_window_border_color 0xff8aadf4
yabai -m config normal_window_border_color 0xff494d64

# Window shadow
yabai -m config window_shadow float

# Window animation duration
yabai -m config window_animation_duration 0.2

# ====== Window Management ======

# Auto balance makes windows always occupy equal space
yabai -m config auto_balance off

# Split direction (vertical, horizontal, auto)
yabai -m config split_type auto

# New window spawns to the right/bottom
yabai -m config window_placement second_child

# ====== Application Rules ======

# Float system preferences and settings
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off

# Float specific apps
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off

# Float development tools dialogs
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Font Book$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Alfred$" manage=off

# Float common utility windows
yabai -m rule --add title="^Preferences$" manage=off
yabai -m rule --add title="^Settings$" manage=off
yabai -m rule --add title="^About" manage=off

# Dropdown terminal (if using Hammerspoon)
yabai -m rule --add app="^WezTerm$" title="^dropdown$" manage=off

echo "yabai configuration loaded..."
